# Supabase (from your existing setup)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
NEXT_PUBLIC_R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# Or use custom domain for R2
# NEXT_PUBLIC_R2_PUBLIC_URL=https://cdn.yourdomain.com

# Site URL
NEXT_PUBLIC_SITE_URL=https://your-site.pages.dev

# Jikan API (if you need rate limit control)
JIKAN_API_BASE_URL=https://api.jikan.moe/v4
